<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/explainback">



    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_circle"
        android:text='👈'
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick= "cnm"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="先辈博饼规则"
        android:textSize="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_back"
        android:textColor="#EE6B62"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="  six dice, shake randomly to produce results.\n  allows multiple people to participate, and can automatically determine the results.\n  you can choose a stand-alone version or a network format."
        android:textSize="26dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="265dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/senbei"
         />
</androidx.constraintlayout.widget.ConstraintLayout>