<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/explainback">

    <ImageView
        android:id="@+id/bowljpg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="480dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bowl"
        />

    <ImageView
        android:id="@+id/i6"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/bowljpg"
        app:layout_constraintTop_toTopOf="@+id/bowljpg"
        app:srcCompat="@drawable/sezi" />

    <ImageView
        android:id="@+id/i5"
        android:layout_width="65dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/sezi"
        app:layout_constraintTop_toTopOf="@+id/bowljpg"
        app:layout_constraintLeft_toLeftOf="@+id/bowljpg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-15dp" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="94dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/sezi"
        app:layout_constraintTop_toTopOf="@+id/bowljpg"
        app:layout_constraintLeft_toLeftOf="@+id/bowljpg"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="-60dp" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="129dp"
        android:layout_height="135dp"
        app:srcCompat="@drawable/sezi"
        app:layout_constraintTop_toTopOf="@+id/bowljpg"
        app:layout_constraintLeft_toLeftOf="@+id/bowljpg"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-150dp" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="149dp"
        android:layout_height="162dp"
        app:srcCompat="@drawable/sezi"
        app:layout_constraintTop_toTopOf="@+id/bowljpg"
        app:layout_constraintLeft_toLeftOf="@+id/bowljpg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-230dp" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="194dp"
        android:layout_height="197dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="-300dp"
        app:layout_constraintLeft_toLeftOf="@+id/bowljpg"
        app:layout_constraintTop_toTopOf="@+id/bowljpg"
        app:srcCompat="@drawable/sezi" />

    <Button
        android:id="@+id/quit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_circle"
        android:text='ðŸ‘ˆ'
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick= "quit"
        />
    <Button
        android:id="@+id/level"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_circle"
        android:text='?'
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="level"
        />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="220dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/start"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toTopOf="@+id/bowljpg"
        app:layout_constraintLeft_toLeftOf="@+id/bowljpg"
        android:onClick="begin"/>

    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bowljpg"
        android:layout_marginTop="-370dp"

        android:textSize="56dp"
        android:textColor="#EE6B62"
         />


</androidx.constraintlayout.widget.ConstraintLayout>